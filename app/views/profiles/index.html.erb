<div class="panel panel-default">
  <div class="panel-heading">
   <div class="panel-title">
     <h1>Profile</h1>
   </div>
 </div>

<% @profiles.each do |profile| %>
  <div class= "row">
    <div class="col-lg-3 profile">
      <p class= "profile-topic">Job</p>
      <%= profile.job_title %>
    </div>
    <div class="col-lg-3 profile">
      <p class= "profile-topic">Skills</p>
      <%= profile.skill %>
    </div>
    <div class="col-lg-3 profile">
      <p class= "profile-topic">Hobbies</p>
      <%= profile.hobbies %>
    </div>
    <div class="col-lg-3 profile">
      <p class= "profile-topic">Food</p>
      <%= profile.food %>
    </div>
  </div>

<div class="panel-footer">    
      <div>
        <%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-primary"  %>
        <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning"  %>
      </div>
    <% end %>
  </div>
</div>
